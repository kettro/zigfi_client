div.options-modal_add-block
  div.options-modal_title-block
    span.options-modal_title-text Add Items
  div.options-modal_groups-block
    div.options-modal_groups-title-block
      span.options-modal_groups-title-text Add a Group
      div.options-modal_expando
        //img.expando_img(src='/images/expando_close_arrow.svg')
    div.options-modal_groups-add-block
  div.options-modal_devices-block
    div.options-modal_devices-title-block
      span.options-modal_devices-title-text Add a Device
      div.options-modal_expando
        //img.expando_img(src='/images/expando_close_arrow.svg')
